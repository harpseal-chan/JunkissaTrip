<div class="comment col-md-10 col-md-offset-1 col-xs-12">
  <div class="cm-user-info col-xs-12">
    <% if comment.user.avatar.attached? %>
      <%= image_tag comment.user.avatar.variant(resize_to_limit: [200, 200]).processed, class: "avatar" %>
    <% else %>
      <%= image_tag "no_image.png", alt: "アイコン", class: "avatar" %>
    <% end %>
    <div class="cm-title">
      <%= comment.user.name %>さんのコメント
    </div>
  </div>
  
  <div class="col-xs-12">
    <p class="cm-content"><%= comment.content %></p>
  </div>

  <% if logged_in? && comment.posted_by?(current_user) %>
    <div class="cm-delete col-xs-12">
      <%= link_to shop_comment_path(@shop, comment), class:'', method: :delete, data: { confirm: 'コメントを削除しますか？' } do %>
        <i class="fa-solid fa-trash fa-lg"></i>
      <% end %>
    </div>
  <% end %>
</div>
