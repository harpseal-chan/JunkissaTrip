<% provide(:title, '店舗一覧') %>

<div class="container-fluid">
  <div class="row content-wrapper">
    <div class="shop-index-wrapper col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
      <h1>店舗一覧</h1>
      <div class="col-xs-12">
        <button type="button" class="btn " data-toggle="modal" data-target="#ShopImageModal">
          店舗のジャンルで絞り込む
        </button>
      </div>
      <div class="col-xs-12">
        <%= search_form_for @q, url: shops_path do |f| %>
          <%= f.collection_check_boxes :features_id_in, @features, :id, :detail %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      <div class="search-bar-content col-xs-12">
        <%= render 'static_pages/search_bar' %>
      </div>
      <% unless @shops.blank? %>
        <div class="shops">
          <%= render partial: 'shop', collection: @shops, as: 'shop' %>
        </div>
        <%= paginate @shops %>
      <% else %>
        <div id="shop-not-found">
          <h4>条件に合う純喫茶がありません</h4>
        </div>
      <% end %>
    </div>
  </div>
</div>
