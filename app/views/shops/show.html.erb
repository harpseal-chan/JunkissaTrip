<% provide(:title, @shop.name) %>

<div class="container-fluid">
    <div class="row content-wrapper">
      <div class="col-xs-12 col-md-10 col-md-offset-1" id="shop-detail-wrapper">

        <div class="row">
          <h1 class="col-xs-12 col-md-9"><%= @shop.name %></h1>
          <div class="col-xs-7 col-md-3">
            <%= render 'shops/bookmark_button' %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-xs-12 col-md-7">
            <% if @shop.image.nil? %>
              <%= image_tag 'no_image.png', alt: "店舗の写真", class: "shop-img" %>
            <% else %>
              <%= image_tag @shop.image, alt: "店舗の写真", class: "shop-img" %>
            <% end %>
          </div>

          <div class="shop-info col-xs-12 col-md-5">
            <dl>
              <dt>住所</dt>
              <dd><%= @shop.address %></dd>
              <dt>電話番号</dt>
              <dd><%= @shop.phone %></dd>
              <dt>営業時間</dt>
              <dd><%= @shop.opening %></dd>
              <dt>定休日</dt>
              <dd><%= @shop.closed %></dd>
            </dl>
          </div>
        </div>
  
        <div class="row">
          <div class="col-xs-12">
            <h3>コメント一覧</h3>
          </div>
        </div> 
        <% if @comments.blank? %>
            <div id="comment-not-found" class="col-xs-12">
              <p>コメントはまだ投稿されていません。</p>
            </div>
        <% else %>
            <%= render partial: 'comments', collection: @comments, as: 'comment' %>
        <% end %>
        <% if current_user %>
          <button type="button" class="btn btn-pc" data-toggle="modal" data-target="#PostCommentModal">
            コメントを投稿する
          </button>
        <% end %>
        <%= render 'post_comment', { shop: @shop, comment: @comment } %>    
      </div>
    </div>
        
  </div>
</div>
