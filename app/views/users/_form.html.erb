<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @user %>
  <div class="col-xs-12">
    <%= f.label :name %>
  </div>
  <div class="col-xs-12">
    <%= f.text_field :name, class: "input-field" %>
  </div>

  <div class="col-xs-12">
    <%= f.label :email %>
  </div>
  <div class="col-xs-12">
    <%= f.email_field :email, class: "input-field" %>
  </div>

  <div class="col-xs-12">
    <%= f.label :password %>
  </div>
  <div class="col-xs-12">
    <%= f.password_field :password, class: "input-field" %>
  </div>

  <div class="col-xs-12">
    <%= f.label :password_confirmation %>
  </div>
  <div class="col-xs-12">
    <%= f.password_field :password_confirmation, class: "input-field" %>
  </div>
  
  <div class="col-xs-12">
    <%= f.submit yield(:button_text), class: "btn" %>
  </div>
<% end %>