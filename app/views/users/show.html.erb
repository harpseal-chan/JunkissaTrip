<div class="content-wrapper">
  <div class="user-detail-wrapper">
    <div class="title">
      <% if current_user?(@user) %>
        <%= provide(:title, 'マイページ') %>
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
              <h1>マイページ</h1>
            </div>
          </div>
        </div>
      <% else %>
        <%= provide(:title, @user.name) %>
      <% end %>
    </div>

    <div class="container profile">
      <div class="row">
        <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
            <%= image_tag "no_image.png", alt: "アイコン", class: "icon", width: "150", height: "150" %>
          <div class="">
            <h3><%= @user.name %></h3>
            <h4><%= @user.email %></h4>
          </div>
        </div>
      </div>
    </div>  
    
    <div class="container">
      <div class="row bm-shop-wrapper">
        <h3>ブックマーク一覧</h3>
        <div class="bm-shops">
          <%= render partial: 'bookmark', collection: @user.bookmark_shops, as: 'shop' %>
        </div>
      </div>
    </div>
  </div>
</div>